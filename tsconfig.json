{
  "include": ["src"],
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "jsxFactory": "createElement",
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
