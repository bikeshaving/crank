{
  "name": "@b9g/crank",
  "version": "0.4.0",
  "private": true,
  "description": "Write JSX-driven components with functions, promises and generators.",
  "homepage": "https://crank.js.org",
  "bugs": {
    "url": "https://github.com/bikeshaving/crank/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bikeshaving/crank.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./crank.js",
      "require": "./crank.cjs"
    },
    "./crank": {
      "import": "./crank.js",
      "require": "./crank.cjs"
    },
    "./crank.js": {
      "import": "./crank.js",
      "require": "./crank.cjs"
    },
    "./dom": {
      "import": "./dom.js",
      "require": "./dom.cjs"
    },
    "./dom.js": {
      "import": "./dom.js",
      "require": "./dom.cjs"
    },
    "./html": {
      "import": "./html.js",
      "require": "./html.cjs"
    },
    "./html.js": {
      "import": "./html.js",
      "require": "./html.cjs"
    },
    "./index": {
      "import": "./index.js",
      "require": "./index.cjs"
    },
    "./index.js": {
      "import": "./index.js",
      "require": "./index.cjs"
    },
    "./package.json": "./package.json",
    "./umd": {
      "require": "./umd.js"
    },
    "./umd.js": {
      "require": "./umd.js"
    }
  },
  "main": "crank.cjs",
  "module": "crank.js",
  "types": "crank.d.ts",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "rollup -c rollup.config.js",
    "clean": "shx rm -rf dist",
    "debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "preshipit": "npm run test && npm run build",
    "shipit": "cd dist && npm publish && ./scripts/rename-pkg.js && npm publish",
    "test": "jest --config jest.config.cjs --color --no-cache",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "jest": "^26.6.3",
    "magic-string": "^0.25.7",
    "prettier": "^2.4.1",
    "rollup": "^2.57.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "shx": "^0.3.3",
    "ts-jest": "^26.5.6",
    "ts-transform-import-path-rewrite": "^0.3.0",
    "typescript": "^4.4.3"
  },
  "workspaces": [".", "examples", "website"],
  "publishConfig": {
    "access": "public"
  }
}
