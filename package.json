{
  "name": "@b9g/crank",
  "version": "0.5.0-beta.4",
  "private": true,
  "description": "Write JSX-driven components with functions, promises and generators.",
  "homepage": "https://crank.js.org",
  "bugs": {
    "url": "https://github.com/bikeshaving/crank/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bikeshaving/crank.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/crank.js",
      "require": "./dist/crank.cjs"
    },
    "./crank": {
      "import": "./dist/crank.js",
      "require": "./dist/crank.cjs"
    },
    "./crank.js": {
      "import": "./dist/crank.js",
      "require": "./dist/crank.cjs"
    },
    "./dom": {
      "import": "./dist/dom.js",
      "require": "./dist/dom.cjs"
    },
    "./dom.js": {
      "import": "./dist/dom.js",
      "require": "./dist/dom.cjs"
    },
    "./html": {
      "import": "./dist/html.js",
      "require": "./dist/html.cjs"
    },
    "./html.js": {
      "import": "./dist/html.js",
      "require": "./dist/html.cjs"
    },
    "./core": {
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    },
    "./core.js": {
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    },
    "./package.json": "./dist/package.json",
    "./tags": {
      "import": "./dist/tags.js",
      "require": "./dist/tags.cjs"
    },
    "./tags.js": {
      "import": "./dist/tags.js",
      "require": "./dist/tags.cjs"
    },
    "./umd": {
      "require": "./dist/umd.js"
    },
    "./umd.js": {
      "require": "./dist/umd.js"
    }
  },
  "main": "crank.cjs",
  "module": "crank.js",
  "types": "crank.d.ts",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "rollup -c rollup.config.js",
    "clean": "shx rm -rf dist",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "preshipit": "npm run typecheck && npm run test && npm run build",
    "shipit": "cd dist && npm publish && cd .. && ./scripts/rename-pkg.js && cd dist && npm publish",
    "test": "playwright-test --runner uvu",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@types/sinon": "^10.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "magic-string": "^0.26.2",
    "playwright-test": "^8.1.1",
    "prettier": "^2.7.1",
    "rollup": "^2.76.0",
    "rollup-plugin-typescript2": "^0.32.1",
    "shx": "^0.3.4",
    "sinon": "^14.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^4.7.4",
    "uvu": "^0.5.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
