{
  "name": "@b9g/crank",
  "version": "0.4.4",
  "private": true,
  "description": "Write JSX-driven components with functions, promises and generators.",
  "homepage": "https://crank.js.org",
  "bugs": {
    "url": "https://github.com/bikeshaving/crank/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bikeshaving/crank.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": {
      "import": "./crank.js",
      "require": "./crank.cjs"
    },
    "./crank": {
      "import": "./crank.js",
      "require": "./crank.cjs"
    },
    "./crank.js": {
      "import": "./crank.js",
      "require": "./crank.cjs"
    },
    "./dom": {
      "import": "./dom.js",
      "require": "./dom.cjs"
    },
    "./dom.js": {
      "import": "./dom.js",
      "require": "./dom.cjs"
    },
    "./html": {
      "import": "./html.js",
      "require": "./html.cjs"
    },
    "./html.js": {
      "import": "./html.js",
      "require": "./html.cjs"
    },
    "./index": {
      "import": "./index.js",
      "require": "./index.cjs"
    },
    "./index.js": {
      "import": "./index.js",
      "require": "./index.cjs"
    },
    "./package.json": "./package.json",
    "./template": {
      "import": "./template.js",
      "require": "./template.cjs"
    },
    "./template.js": {
      "import": "./template.js",
      "require": "./template.cjs"
    },
    "./umd": {
      "require": "./umd.js"
    },
    "./umd.js": {
      "require": "./umd.js"
    }
  },
  "main": "crank.cjs",
  "module": "crank.js",
  "types": "crank.d.ts",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "rollup -c rollup.config.js",
    "clean": "shx rm -rf dist",
    "debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "preshipit": "npm run typecheck && npm run test && npm run build",
    "shipit": "cd dist && npm publish && cd .. && ./scripts/rename-pkg.js && cd dist && npm publish",
    "test": "jest --config jest.config.cjs --color --no-cache",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "jest": "^26.6.3",
    "magic-string": "^0.26.2",
    "prettier": "^2.7.1",
    "rollup": "^2.77.2",
    "rollup-plugin-typescript2": "^0.32.1",
    "shx": "^0.3.4",
    "ts-jest": "^26.5.6",
    "ts-jest-resolver": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
