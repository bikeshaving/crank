    "@types/marked": "^4.0.1",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^18.0.3",
    "@types/postcss-nested": "^4.2.3",
    "@types/postcss-preset-env": "^6.7.3",
    "@types/prismjs": "^1.16.6",
    "esbuild": "^0.13.8",
    "front-matter": "^4.0.2",
    "fs-extra": "^10.0.0",
    "gh-pages": "^3.2.3",
    "http-server": "^14.1.0",
    "marked": "^4.0.8",
    "mime-types": "^2.1.35",
    "nodemon": "^2.0.16",
    "normalize.css": "^8.0.1",
    "path-to-regexp": "^6.2.1",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^6.7.0",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.25.0",
    "sucrase": "^3.20.3",
