    "@types/marked": "^4.0.1",
    "@types/mini-css-extract-plugin": "^2.4.0",
    "@types/postcss-nested": "^4.2.3",
    "@types/postcss-preset-env": "^6.7.3",
    "@types/prismjs": "^1.16.6",
    "esbuild": "^0.13.8",
    "front-matter": "^4.0.2",
    "fs-extra": "^10.0.0",
    "gh-pages": "^3.2.3",
    "http-server": "^14.1.0",
    "marked": "^4.0.8",
    "mini-css-extract-plugin": "^2.4.2",
    "nodemon": "^2.0.16",
    "normalize.css": "^8.0.1",
